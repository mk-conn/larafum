<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      {{#if feed.logo}}
        <img class="img-fluid" src="{{feed.logo}}" alt="Feed Logo">
      {{/if}}
      <h4 class="card-title align-self-end">
        <a href="{{feed.siteUrl}}" target="_blank">{{feed.name}}</a>
      </h4>
    </div>
    <h6 class="card-subtitle mb-2 text-muted"></h6>
    <p class="card-text">{{feed.description}}</p>
  </div>

  <ul class="list-group article-items" id="article-list-items">
    {{#each model as |article|}}
      {{article-list-item article=article feed=model.feed classNames="list-group-item article-item"}}
    {{/each}}
  </ul>
</div>

{{infinity-loader infinityModel=model loadingText="Loading..." scrollable='#content-zone'}}

