<a href="#" class="nav-link" {{action "toggleSearch"}}>
  <i class="fa fa-search action"></i>
</a>

{{#if showResults}}

  {{#scrollable-container id="article-search-result"}}
    <div class="mt-2 mb-3 ml-2">
      <a href="#" class="btn btn-sm btn-outline-secondary" {{action "toggleSearch"}}>
        <i class="fa fa-close"></i>
      </a>
    </div>
    <div class="form-group ml-2 mr-2">
      <div class="input-group">
        <input type="text" placeholder="Search articles" class="form-control"
               oninput={{perform searchArticle value="target.value"}}/>
        <span class="input-group-addon">
          {{#if searchArticle.isRunning}}
            <i class="fa fa-circle-o-notch fa-spin fa-fw"></i>
          {{else}}
            <i class="text-muted fa fa-circle-o-notch fa-fw"></i>
          {{/if}}
        </span>
      </div>
    </div>
    {{#each articles as |article|}}
      <div class="article-result action" {{action "goToArticle" article}}>
        <h5 class="text-muted">{{article.feed.name}}</h5>
        <div>{{moment-format article.updated_date 'YYYY-MM-DD H:m'}}</div>
        <div>{{article.title}}</div>
      </div>
    {{else}}
      <div class="alert alert info">
        No articles found.
      </div>
    {{/each}}
  {{/scrollable-container}}
{{/if}}