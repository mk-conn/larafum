<div class="folder">
  {{#if folder.open}}
    <span class="icon action" {{action (route-action "closeFolder" folder)}}>
      {{fa-icon "folder-open-o"}}
    </span>
  {{else}}
    <span class="icon action" {{action (route-action "openFolder" folder)}}>
      {{fa-icon "folder-o"}}
    </span>
  {{/if}}
  {{folder.name}}
</div>

{{#if folder.open}}
  <div class="list-group feeds">

    {{#sortable-objects sortableObjectList=folder.feeds sortEndAction=(route-action "sort" folder.feeds)
                        sortingScope="feedsSorting" useSwap=false}}
      {{#each folder.feeds as |feed|}}
        {{#draggable-object content=feed isSortable=true sortingScope="feedsSorting"}}
          {{feed-item feed=feed classNames="list-group-item feed-item"}}
        {{/draggable-object}}
      {{/each}}
    {{/sortable-objects}}
  </div>
{{/if}}


