{{#if hasBlock}}
  {{yield}}
{{else}}
  {{#if infinityModel.reachedInfinity}}
    <div class="centered text-md-center text-muted">
      <i class="fa fa-check-circle fa-2x fa-fw"></i>
      <span>Nothing more to load</span>
    </div>
  {{else}}
    <div class="centered text-md-center text-muted">
      <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw"></i>
      <span>Loading...</span>
    </div>
  {{/if}}
{{/if}}
