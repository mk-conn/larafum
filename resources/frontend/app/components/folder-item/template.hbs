<div class="folder">
  {{#if folder.open}}
    <span class="icon action" {{action (route-action "closeFolder" folder)}}>
      {{fa-icon "folder-open"}}
    </span>
  {{else}}
    <span class="icon action" {{action (route-action "openFolder" folder)}}>
      {{fa-icon "folder"}}
    </span>
  {{/if}}
  {{folder.name}}
  {{#draggable-object-target
    overrideClass="folder-droppable"
    dragOverAction=(action toggleProperty "droppable")
    action=(route-action "addFeedToFolder" folder)
  }}
    {{#if droppable}}
      <i class="fa fa-hand-o-left"></i>

    {{/if}}
  {{/draggable-object-target}}
</div>

{{#if folder.open}}
  {{feed-items feeds=folder.feeds classNames="list-group feeds"}}
{{/if}}


