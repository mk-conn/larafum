<div class="feed-actions">
  {{#link-to
    "index.add"
    tagName="button"
    activeClass=null
    classNames="btn btn-sm btn-outline-secondary"
    title="Add feed"
  }}
    {{fa-icon "rss" prefix="fas" mask="plus"}}
  {{/link-to}}
  <button type="button"
          class="btn btn-sm btn-outline-secondary"
          title="Fetch new articles">
    {{fa-icon "sync" prefix="fas"}}
  </button>
</div>

{{article-search}}

<div class="sidebar-item feed-item">
  {{#link-to "index.feed.articles" "archived"}}
    <div class="flex row content-between feed-item">
      <div>
            <span class="feed-icon">
              {{fa-icon "rss" prefix="fas"}}
            </span>
        Archive
      </div>
      <span class="badge badge-secondary">{{starred}}</span>
    </div>
  {{/link-to}}
</div>

