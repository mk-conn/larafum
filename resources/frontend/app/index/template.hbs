<div class="folders">
  {{#sortable-objects sortableObjectList=sortedFolders sortEndAction=(route-action "sort" sortedFolders)
                      enableSort=true
                      inPlace=true
                      sortingScope="foldersSorting" useSwap=false}}
    {{#each sortedFolders as |folder|}}
      {{#draggable-object content=folder isSortable=true sortingScope="foldersSorting"}}
        {{folder-item folder=folder classNames="folder-item"}}
      {{/draggable-object}}
    {{/each}}
  {{/sortable-objects}}
</div>
<div class="folder-item">
  <div class="folder">
    <span class="text-muted">
      Feeds
    </span>
  </div>
  {{feed-items classNames="feeds" feeds=feeds}}
</div>
