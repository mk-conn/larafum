<header class="nextfeed flex row content-between align-center">
  <div class="left">
    <a href="/" target="_self">Nextfeed</a>
    {{#if session.isAuthenticated}}
      {{#link-to "index" classNames="nav-link" activeClass="active"}}
        {{fa-icon "rss" prefix="fas"}}
      {{/link-to}}
    {{/if}}
    {{outlet "top-bar-left"}}
  </div>
  {{#if session.isAuthenticated}}
    <div class="right">
      <a href="#" {{action (route-action "updateAllFeeds")}}>
        {{fa-icon "sync-alt" prefix="fas"}}
      </a>
      {{#link-to "index.settings"}}
        {{fa-icon "cogs" prefix="fas"}}
      {{/link-to}}
      <div class="user">
        {{fa-icon "user"}}
        <span class="user fullname">
          {{currentUser.user.fullname}}
        </span>
        <a href="#" {{action (route-action "invalidateSession")}}>
          {{fa-icon "sign-out-alt" prefix="fas"}}
        </a>
      </div>
      {{outlet "top-bar-right"}}
    </div>
  {{/if}}
</header>